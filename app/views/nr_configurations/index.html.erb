<h1>Listing NetRestore configurations</h1>
<table>
  <tr>
    <td width="85%" align="left" valign="top"><%= @nr_configurations.size %> records found</td>
    <td width="15%" align="right" valign="top"><% form_tag(new_nr_configuration_path, :method => :get) do %><%= submit_tag "Add New Record" %><% end %></td>
  </tr>
</table>
<table>
  <tr>
    <th>Name</th>
    <th>Protocol</th>
    <th>Host</th>
    <th>Share</th>
    <th>Path</th>
  </tr>
<% for nr_configuration in @nr_configurations %>
  <tr>
    <td><%= nr_configuration.name %></td>
    <td><%= nr_configuration.protocol %></td>
    <td><%= nr_configuration.host_or_volume %></td>
    <td><%= nr_configuration.sharepoint %></td>
    <td><%= nr_configuration.path %></td>
    <td><%= link_to 'Show', :action => 'show', :id => nr_configuration %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => nr_configuration %></td>
    <td><%= link_to 'Destroy', { :action => 'destroy', :id => nr_configuration }, :confirm => 'Are you sure?', :method => :post %></td>
  </tr>
<% end %>
</table>
<br />
<%= link_to 'New NetRestore configuration', new_nr_configuration_path %>
